<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleDiceRoll.ViewToViewBindingPage">
    <ContentPage.Content>
        <Grid Margin="20, 50, 20, 10" x:Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Text="Slider Value:"
               BindingContext="{x:Reference Name=SidesSlider}"/>
            
            <Label Grid.Row="0" Grid.Column="1" Text="{Binding Value}"
               BindingContext="{x:Reference Name=SidesSlider}"/>
            
            <Slider Grid.Row="1" x:Name="SidesSlider" Grid.ColumnSpan="2"
                Minimum="0" Maximum="20"
                Value="0"/>

        </Grid>
    </ContentPage.Content>
</ContentPage>